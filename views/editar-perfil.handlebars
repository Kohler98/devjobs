<main class="contenedor">
    <form action="/editar-perfil" method="post" class="default-form" enctype="multipart/form-data">
    <div class="campo">
        <label for="">Nombre </label>
        <input value="{{usuario.nombre}}"  type="text" name="nombre" id="" placeholder="Tu nombre " required>
    </div>
    <div class="campo">
        <label for="">Email </label>
        <input value="{{usuario.email}} " type="email" name="email" id="" placeholder="Tu Email " required>
    </div>
    <div class="campo">
        <label for="">Contraseña </label>
        <input type="password" name="password" id="" placeholder="Tu contraseña " required>
    </div>
    <div class="campo">
        <label for="">Imagen </label>
        <input type="file" name="imagen" id="" placeholder="Tu imagen de perfil " required>
        <img src="/uploads/perfiles/{{usuario.imagen}}" alt="" class="admin-perfil">
    </div>
    <div class="campo">
        <input type="submit" value="Guardar Cambios" class="btn btn-azul">
    </div>
    
    </form>
</main>