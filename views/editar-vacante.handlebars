<main class="contenedor">
    <form action="/vacante/editar/{{vacante.url}}"  method="post" class="default-form">
        <h3>Informacion General</h3>

        <div class="campo">
            <label for="">Titulo</label>
            <input type="text" name="titulo" id="" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required>
        </div>
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" name="empresa" id="" placeholder="Ej: Empresa Contrata" value="{{vacante.empresa}}" required>
        </div>
        <div class="campo">
            <label for="">Ubicacion</label>
            <input type="text" name="ubicacion" id="" placeholder="Ej: Venezuela" value="{{vacante.ubicacion}}" required>
        </div>
        <div class="campo">
            <label for="">Salario (USD)</label>
            <input type="text" name="salario" id="" placeholder="Ej: $ 500 USD" value="{{vacante.salario}}" required>
        </div>
        <div class="campo">
            <label for="">Contrado</label>
            <select name="contrato" id="">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>--Selecciona--</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
  
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripcion</label>
            <input type="hidden" name="descripcion" value="{{{vacante.descripcion}}}" id="x">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">

        </div>
    </form>
</main>